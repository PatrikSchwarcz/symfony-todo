{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
        <h2 class="page-header mb-3">Create new account</h2>

        {{ form_row(form.username) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword.first) }}
        {{ form_row(form.plainPassword.second) }}

        <button type="submit" class="btn btn-lg btn-primary btn-block mt-3 mb-1">Create Account</button>
    {{ form_end(form) }}
    
    <a href="{{ path('login') }}" class="btn btn-secondary mt-3">Go to login page</a>
{% endblock %}